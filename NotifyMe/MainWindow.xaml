<Window x:Class="NotifyMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NotifyMe" Height="400" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Notification Center" FontSize="18" FontWeight="Bold"/>
            <Button Content="Adicionar Lembrete" Click="AddReminder_Click"/>
            <Button Content="Remover Selecionado" Click="RemoveReminder_Click"/>
            <Button Content="Configurações" Click="OpenSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>
